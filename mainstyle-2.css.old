	margin-right: auto;
	}

/* Colonna sx */
#rettangolo_alto_dx img {
	padding : 3em 0px 3em 0px;
	}

/*	 Menu */
.pre-menu {
	margin: 3em 1em auto 1em;
	float: left;
	width: 13em; 
	font-family: Verdana, Arial, Helvetica, sans-serif; 
	font-size: 12px; 
	font-weight: bold;
	background-color: #ffffff;
	}
	
#menu {
	margin: 3em 1em auto 1em;
	float: left;
	width: 13em; 
	font-family: Verdana, Arial, Helvetica, sans-serif; 
	font-size: 12px; 
	font-weight: bold;
	background-color: #edef07;
	border-right: 1px solid #ff3a18;
	border-left: 1px solid #ff3a18;
	border-bottom: 1px solid #ff3a18;
	}
#menu h3 {
	color: #0054f7;
	margin: 0px; 
	padding: 0.5em ;
	font-weight: bold;
	border-bottom: 1px solid #ff3a18;
	border-top: 1px solid #ff3a18;
	background-color: #ffd618;
	}

.MenuSecondario {
	font-family: Verdana, Arial, Helvetica, sans-serif; 
	font-size: 10px; 
	font-weight: bold;
	text-align: left;
	color: #ffffad;
	margin-top: -1.0em;
	margin-left: 2em;
	}
	
	/* Aggiusta le prenotazioni tedesche */
#menu li {
	margin: 0px 0px 0px -1em;
		}
			
#menu a {
	color:#3a17eb;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	text-decoration: none;
	background-color: #edef07;
		}
#menu a:hover {
	text-decoration: underline;
	background-color: #ffd618;
	}
#menu a#activelink{
	color: #ff3a18;
	text-decoration: none;
	}
#contatori {
	float: left;
	width: 13em; 
	font-family: Verdana, Arial, Helvetica, sans-serif; 
	color: #3F40DF;
	font-size: 10px; 
	font-weight: bold;
	background-color: #ffffff;
	padding-top: 4em;
	margin-left: 3em;
	}
